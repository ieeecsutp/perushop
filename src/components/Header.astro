---
const navItems = [
  { name: "Inicio", href: "/" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Productos", href: "/productos" },
];
---

<header
  class="bg-red text-primary-foreground fixed top-0 left-0 right-0 z-50 bg-background/90 backdrop-blur-sm border-b border-border"
>
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-2 flex-1 md:flex-none">
        <div class="text-3xl font-sans text-primary">
          <span class="text-fareground">Peru</span><span class="text-especial">Shop]</span>        </div>
      </a>
      <ul class="hidden md:flex items-center gap-8 mx-8 flex-1 justify-center">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-primary-foreground hover:text-primary transition-colors font-medium px-3 py-2"
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="flex items-center gap-4 justify-end flex-1 md:flex-none">
        <a
          href="/login"
          class="text-primary-foreground px-4 py-2 rounded-md hover:bg-accent/90 transition-colors font-medium hidden md:block"
        >
          Ingresar
        </a>
        <a
          href="/register"
          class="text-primary-foreground px-4 py-2 rounded-md hover:bg-accent/90 transition-colors font-medium hidden md:block"
        >
          Registrar
        </a>
        <button id="menu-toggle" class="md:hidden p-2 text-foreground">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <ul class="flex flex-col gap-4 mb-4">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-foreground hover:text-primary transition-colors font-medium block py-2 px-4"
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="flex flex-col gap-3 border-t border-border pt-4">
        <a
          href="/login"
          class="text-foreground hover:text-primary transition-colors font-medium block py-2 px-4 text-center"
        >
          Login
        </a>
        <a
          href="/register"
          class="bg-accent text-accent-foreground px-4 py-2 rounded-md hover:bg-accent/90 transition-colors font-medium block text-center mx-4"
        >
          Register
        </a>
      </div>
    </div>
  </nav>
</header>
